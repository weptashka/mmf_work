// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  service               String
  source                String
  user                  String
  region                String
  name                  String
  status                Int
  payload               Json
  createdAt             DateTime  @default(now())
}